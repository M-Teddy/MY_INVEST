  <div class="container py-5 justify-content-center">
  <div class="bank-form">
      <%= simple_form_for(@bank_account) do |f| %>
      <%= f.input :bank, placeholder: "BNP Paribas"%>
      <%= f.input :account_number, placeholder: "FR2910096000702268451392M94" %>
      <%= f.input :type_of, collection: BankAccount::TYPES %>
      <%= f.input :balance, placeholder: "1000" %>
      <%= f.input :currency, collection: BankAccount::CURRENCY %>
      <%= f.submit "Add an account", class: "btn btn-bank-color"%>
      <% end %>
    </div>
</div>
