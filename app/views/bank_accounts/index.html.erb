
<div class="container">
  <div class="cards">
    <%if params[:query] == nil%>
    <div class="card">
      <%= link_to "", new_bank_account_path, class: "add-bot"%>
      <div class="add_card_custom">
        <p><i class="fa-solid fa-plus"></i></p>
      </div>
    </div>
      <% end %>
      <% @bank_accounts.each do |bank_account| %>
    <div class="card">
      <p><%= bank_account.bank %></p>
        <p>Account : <%= bank_account.account_number %></p>
          <p>Type Of : <%= bank_account.type_of %> u</p>
        <p>Balance : <%= bank_account.balance %> $</p>
      <p>Currency : <%= bank_account.currency %> </p>
      <div class="bottom-card">
        <p><strong><%= bank_account.bank %></strong></p>
          <p>
            <%= link_to edit_bank_account_path(bank_account) do %>
              <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              </p>
            <p>
          <%= link_to bank_account_path(bank_account), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" }  do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>




<script>
const swiper = new Swiper('.swiper', {
  // Optional parameters
  // direction: 'vertical',
  loop: true,

  // pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
