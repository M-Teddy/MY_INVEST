

<div class="container">
  <div class="cards">
    <%if params[:query] == nil%>
    <div class="card">
      <%= link_to "", new_bank_account_path, class: "add-bot"%>
      <div class="title-custom">
      <h3>GAINS BANK</h3>
       </div>
        <h5>Total : <%= BankAccount.all_bank %> $</h5>
          <% @bank_accounts.each do |bank_account| %>
          <p> <%= bank_account.bank %> <%= bank_account.balance %> $</p>
          <% end %>
      <div class="add_card_custom">
        <p><i class="fa-solid fa-plus"></i></p>
      </div>
    </div>
      <% end %>
      <% @bank_accounts.each do |bank_account| %>
    <div class="card" id="descrip">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=cl_image_path bank_account.photo.key, crop: :fill %>')">
        <h2><%= bank_account.bank %></h2>
      </div>
        <p><%= bank_account.account_number %></p>
          <p>Balance : <%= bank_account.balance %> $</p>
            <p>Currency : <%= bank_account.currency %> </p>

      <div class="bottom-card">
          <p>
            <%= link_to edit_bank_account_path(bank_account) do %>
              <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              </p>
            <p>
          <%= link_to bank_account_path(bank_account), data: { method: :delete, confirm: "Are you sure ?" }  do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>



<script>
const swiper = new Swiper('.swiper', {
  // Optional parameters
  // direction: 'vertical',
  loop: true,

  // pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
