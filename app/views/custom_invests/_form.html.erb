<div class="container py-5 justify-content-center">
  <div class="custom-form">
    <%= simple_form_for(@custom_invest) do |f| %>
    <%= f.input :name, label:"Name"  %>
    <%= f.input :category, label:"Category" %>
    <%= f.input :quantity, label:"Quantity" %>
    <%= f.input :unity_cost, label:"Unity cost" %>
    <%= f.input :actual_cost, label:"Actual cost" %>
    <%= f.input :description, label:"Description" %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add an invest", class: "btn btn-custom-invest-color"%>
    <% end %>
  </div>
</div>
