

<%# Container %>
<div class="container">
  <div class="cards">
    <%if params[:query] == nil%>
    <div class="card">
      <%= link_to "Add a new", new_custom_invest_path, class: "add-bot"%>
      <img src="https://images.surfacemag.com/app/uploads/2021/08/23031625/tesla-bot.jpg" alt="" class="card__img card__img--full">
      <div>
        <p>AJOUTER UN BOT</p>
      </div>
    </div>
    <% end %>

    <% @custom_invests.each do |custom_invest| %>
    <div class="card">
          <!-- Slider main container -->
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div class="swiper-slide">
            <div>
            <% if custom_invest.photo.key  %>
              <%= cl_image_tag custom_invest.photo.key, class:"card__img", crop: :fill %>
            <% end %>
              <%#= cl_image_tag bot.photo.key, class:"card__img", crop: :fill %>
            </div>
          </div>
            <div class="swiper-slide" id="descrip">
              <h2>Description</h2>
              <p><%= custom_invest.description %></p>
              <p><%= custom_invest.quantity %>€/Jour</p>
              <p><%=  %>⭐️</p>
            </div>
            <div class="swiper-slide ">

            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          </div>
          <div>
            <%= link_to custom_invest_path(custom_invest), class:"card__link" do %>
            <p><%= custom_invest.name %></p>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div id="mapbox">
      </div>
    </div>
  </div>
</div>


<script>
const swiper = new Swiper('.swiper', {
  // Optional parameters
  // direction: 'vertical',
  loop: true,

  // pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
